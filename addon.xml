<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.firefox.launcher" name="Firefox Launcher" version="0.0.3" provider-name="panina">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.script" library="main.py">
		<provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">A launcher of pre-installed firefox</summary>
        <description lang="en">A simple launcher, that runs firefox in its own window.</description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
        <language/>
        <forum/>
        <source>https://github.com/nonbinary/kodi-firefoxlauncher</source>
        <website>https://webmail.nonbinary.me</website>
        <email>panina@nonbinary.me</email>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
		</assets>
    </extension>
</addon>
